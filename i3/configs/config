# resize window (you can also use the mouse for that)
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode

    # Pressing left will shrink the window’s width.
    # Pressing right will grow the window’s width.
    # Pressing up will shrink the window’s height.
    # Pressing down will grow the window’s height.
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    # same bindings, but for the arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape or $mod+r
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# combine window
mode "combine" {
    # These bindings trigger as soon as you enter the resize mode

    bindsym h mode "default"; exec "i3-msg 'split horizontal, focus left, move right, layout stacking'"
    bindsym j mode "default"; exec "i3-msg 'split vertical, focus down, move up, layout stacking'"
    bindsym k mode "default"; exec "i3-msg 'split vertical, focus up, move down, layout stacking'"
    bindsym l mode "default"; exec "i3-msg 'split horizontal, focus right, move left, layout stacking'"

    # same bindings, but for the arrow keys
    bindsym Left  mode "default"; exec "i3-msg 'split horizontal, focus left, move right, layout stacking'"
    bindsym Down  mode "default"; exec "i3-msg 'split vertical, focus down, move up, layout stacking'"
    bindsym Up    mode "default"; exec "i3-msg 'split vertical, focus up, move down, layout stacking'"
    bindsym Right mode "default"; exec "i3-msg 'split horizontal, focus right, move left, layout stacking'"

    # back to normal: Enter or Escape or $mod+r
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

bindsym $mod+c mode "combine"
